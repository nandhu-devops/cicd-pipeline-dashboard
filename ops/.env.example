# CI/CD Health Dashboard Operations Environment Configuration

# Backend Configuration
DATABASE_URL=sqlite+aiosqlite:///./data.db
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Alert System Configuration
ALERTS_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@company.com
SMTP_PASSWORD=your-app-password

# Worker Configuration
ENABLE_GH=true
ENABLE_JENKINS=false
WORKER_POLL_INTERVAL=60
WORKER_JITTER_SECONDS=10
GITHUB_TOKEN=your-github-token
GITHUB_REPOS=owner/repo1,owner/repo2
DASHBOARD_API_URL=http://localhost:8000
DASHBOARD_API_KEY=your-secure-production-key

# Frontend Configuration
VITE_API_BASE=http://localhost:8000
